<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intermater"
    tools:context=".Intermedio.MainActivityInterMatematicas">

    <Button
        android:id="@+id/btnEva1Mate"
        android:layout_width="179dp"
        android:layout_height="65dp"
        android:layout_marginTop="260dp"
        android:backgroundTint="#F38D8D"
        android:text="Evaluacion 1"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.845"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="3dp" />

    <Button
        android:id="@+id/btnCon2Mate"
        android:layout_width="179dp"
        android:layout_height="65dp"
        android:layout_marginTop="76dp"
        android:backgroundTint="#3C2929"
        android:text="Contenido 2"
        android:textColor="#E8D7D7"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCon1Mate"
        app:strokeWidth="3dp" />

    <Button
        android:id="@+id/btnCon3Mate"
        android:layout_width="179dp"
        android:layout_height="65dp"
        android:layout_marginTop="76dp"
        android:backgroundTint="#3C2929"
        android:text="Contenido 3"
        android:textColor="#E8D7D7"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCon2Mate"
        app:strokeWidth="3dp" />

    <Button
        android:id="@+id/btnEva3Mate"
        android:layout_width="179dp"
        android:layout_height="65dp"
        android:layout_marginTop="76dp"
        android:backgroundTint="#F38D8D"
        android:text="Evaluacion 3"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.845"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEva2Mate"
        app:strokeWidth="3dp" />

    <Button
        android:id="@+id/btnCon1Mate"
        android:layout_width="179dp"
        android:layout_height="65dp"
        android:layout_marginTop="196dp"
        android:backgroundTint="#2E2B26"
        android:text="Contenido 1"
        android:textColor="#E8D7D7"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="3dp" />

    <Button
        android:id="@+id/btnEva2Mate"
        android:layout_width="179dp"
        android:layout_height="65dp"
        android:layout_marginTop="92dp"
        android:backgroundTint="#F38D8D"
        android:text="Evaluacion 2"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.845"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEva1Mate"
        app:strokeWidth="3dp" />

    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="0dp"
        android:layout_height="103dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    <ImageButton
        android:id="@+id/btnHome"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/cuadrado"
        android:src="@drawable/diseno_botones"
        android:text="Home" />

    <ImageButton
        android:id="@+id/btnMaterias"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/cuadrado"
        android:src="@drawable/gen"
        android:text="Back" />

    <ImageButton
        android:id="@+id/btnPerfil"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/cuadrado"
        android:src="@drawable/fui_ic_anonymous_white_24dp"
        android:text="Menu" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>