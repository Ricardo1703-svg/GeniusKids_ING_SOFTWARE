<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ovalo"
    tools:context=".Login.RegistroActivity">

    <!-- Imagen de perfil -->

    <!-- Bot칩n para elegir la foto de perfil -->

    <ImageView
        android:id="@+id/ImagendePerfil"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="140dp"
        android:contentDescription="Profile Image"
        android:scaleType="centerCrop"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/SeleccionarImagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Elegir foto de perfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ImagendePerfil" />

    <!-- Boton Para registrar -->

    <!-- Bloque del boton -->
    <View
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="67dp"
        android:background="#171819"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrese "
        android:textColor="#FAF5F5"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.136" />

    <!-- Boton de regreso -->
    <ImageButton
        android:id="@+id/Reg2"
        android:layout_width="73dp"
        android:layout_height="44dp"
        android:background="@drawable/border_background"
        android:backgroundTint="#ECEBEB"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view3"
        app:layout_constraintVertical_bias="0.64"
        app:srcCompat="?attr/homeAsUpIndicator" />

    <!-- Nombre de usuario -->

    <!-- Correo electr칩nico -->
    <EditText
        android:id="@+id/txtUsuario"
        android:layout_width="394dp"
        android:layout_height="45dp"
        android:background="@drawable/rectangulo"
        android:backgroundTint="#EAE0E0"
        android:hint="Nombre de Usuario"
        android:textColor="#050505"
        android:textColorHint="#101010"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.358" />

    <Button
        android:id="@+id/btnRegistro"
        android:layout_width="142dp"
        android:layout_height="59dp"
        android:backgroundTint="#495057 "
        android:text="Registrarse"
        android:textColor="#F3EBEB"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.705" />

    <EditText
        android:id="@+id/txtContrasena"
        android:layout_width="394dp"
        android:layout_height="45dp"
        android:background="@drawable/rectangulo"
        android:backgroundTint="#E8E5E5"
        android:hint="Contrase침a"
        android:inputType="textPassword"
        android:textColor="#090909"
        android:textColorHint="#050505"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.556" />

    <EditText
        android:id="@+id/txtCorreo"
        android:layout_width="394dp"
        android:layout_height="45dp"
        android:background="@drawable/rectangulo"
        android:backgroundTint="#EAE0E0"
        android:hint="Correo"
        android:textColor="#050505"
        android:textColorHint="#101010"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.451" />

    <!-- Contrase침a -->

    <ImageView
        android:id="@+id/btno"
        android:layout_width="47dp"
        android:layout_height="38dp"
        android:onClick="togglePasswordVisibility"
        android:src="@drawable/ver"
        app:layout_constraintBottom_toBottomOf="@+id/txtContrasena"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.865"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCorreo"
        app:layout_constraintVertical_bias="0.888" />

    <TextView
        android:id="@+id/textoDeError"
        android:layout_width="295dp"
        android:layout_height="75dp"
        android:layout_marginTop="200dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtContrasena"
        app:layout_constraintVertical_bias="0.108" />

</androidx.constraintlayout.widget.ConstraintLayout>