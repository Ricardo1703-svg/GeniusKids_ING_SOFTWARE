<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/fondo"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".Base_de_Datos.Formulario">

    <!-- Campo para nombre del video -->
    <EditText
        android:id="@+id/editTextVideoName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:hint="Nombre del Contenido/Actividad"
        android:textColor="@color/black" />

    <!-- Campo para URL del video -->
    <EditText
        android:id="@+id/editTextVideoUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:hint="URL del Contenido/Actividad"
        android:textColor="@color/black" />

    <!-- Grupo de botones para categoría -->
    <RadioGroup
        android:id="@+id/radioGroupCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/radioContenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contenido" />

        <RadioButton
            android:id="@+id/radioActividad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actividad" />
    </RadioGroup>

    <!-- Spinner para materias -->
    <Spinner
        android:id="@+id/spinnerMateria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <!-- Spinner para dificultad -->
    <Spinner
        android:id="@+id/spinnerDificultad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <!-- Botón para mostrar videos -->
    <Button
        android:id="@+id/buttonShowVideos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        app:strokeWidth="5dp"
        android:backgroundTint="#cfd7e0"
        android:text="Mostrar Videos" />

    <!-- Botón para guardar -->
    <Button
        android:id="@+id/buttonSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Video"
        android:textColor="#000000"
        app:strokeWidth="5dp"
        android:backgroundTint="#cfd7e0"
        android:layout_marginBottom="16dp" />


    <!-- Texto para mostrar errores -->
    <TextView
        android:id="@+id/txterror"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:layout_marginTop="16dp" />
</LinearLayout>